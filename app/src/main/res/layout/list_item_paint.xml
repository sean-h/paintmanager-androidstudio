<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/paint_color"
        android:layout_width="32sp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/paint_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="32sp"
        android:paddingStart="8sp"
        android:paddingEnd="8sp"
        android:layout_toEndOf="@id/paint_color"/>

    <Button
        android:id="@+id/have_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/have"
        android:layout_alignParentEnd="true"
        android:background="@drawable/have_button"/>
    <Button
        android:id="@+id/need_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/need"
        android:layout_toLeftOf="@id/have_button"
        android:background="@drawable/need_button"/>
    <Button
        android:id="@+id/dont_have_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/dont_have"
        android:layout_toLeftOf="@id/need_button"
        android:background="@drawable/dont_have_button"/>
</RelativeLayout>