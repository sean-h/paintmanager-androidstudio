<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/detail_paint_color"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Brand"/>

            <TextView
                android:id="@+id/detail_range_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Range"/>

            <TextView
                android:id="@+id/detail_paint_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Paint"/>
        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/paint_status_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/dont_have_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dont_have_selected"
            android:text="@string/dont_have"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/need_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/need_selected"
            android:text="@string/need"/>
        <RadioButton
            android:id="@+id/have_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/have_selected"
            android:text="@string/have"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <Button
            android:id="@+id/paint_details_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
        <Button
            android:id="@+id/paint_details_accept"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Okay"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
    </LinearLayout>
</LinearLayout>